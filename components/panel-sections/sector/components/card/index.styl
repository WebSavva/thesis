.sector-card
  position relative
  background-color var(--white-color)
  box-shadow var(--dark-subtle-shadow)
  border-radius var(--bor-rad-card)
  border-left 0.8rem solid var(--growth-color)
  padding 2.5rem 1.75rem

  &::before
    content ""
    position absolute
    top 0
    left 0
    width 100%
    height 100%
    background-image url('/stats.svg')
    background-size 40%
    background-position 95% 20%
    background-repeat no-repeat
    filter opacity(.1) grayscale(1)

  &__head
    &__details
      font-size 2.5rem
      font-weight 300
      letter-spacing 0.1rem

    &__label
      margin-top 1rem
      font-weight 400
      font-size 1.2rem
      color var(--growth-color)

  &__details
    display flex
    flex-direction column
    margin-top 2.5rem

    &__item
      display flex

      & + &
        margin-top 2rem

      &__icon
        padding 1.25rem
        display grid
        place-content center center
        background var(--red-color)
        border-radius var(--bor-rad-card)
        margin-right 1.25rem
        align-self center
        transition .1s ease-out

        ^[0]_income
          background var(--selected-color)

        i
          font-size 3rem
          color var(--white-color)

      &__text
        white-space nowrap

        &__name
          font-size 1.2rem
          font-weight 400
          color #424040
          opacity 150%

        &__value
          display block
          font-weight 600
          padding 0.5rem
          font-size 2.2rem
          color #302f2f

          i
            font-size 1.8rem
            margin-left .25rem
