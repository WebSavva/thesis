.thesis-page
  display flex
  align-items flex-start

  @media $max-md
    flex-direction column
    align-items stretch

  &__viewer
    flex 1
    min-height 80vh
    box-shadow var(--dark-subtle-shadow)
    border-radius var(--bor-rad-card)
    margin-right 3rem

    @media $max-md
      margin-top 3rem
      margin-right 0
      height auto

  &__list
    border-radius 0.8rem
    margin 0
    padding 0
    list-style none
    display flex
    flex-direction column
    background var(--white-color)

    @media $max-md
      order -1

    &__item
      color #545057
      display block
      font-size 1.4rem
      font-weight 300
      padding 2rem 1.5rem
      border 0.2rem solid rgba(0, 0, 0, 15%)
      cursor pointer
      transition all 0.2s ease-out 0.1s

      & + &
        border-top rgba(0 0 0, .15)

      &:hover
      &_selected
        background #5450579f
        color var(--white-color)

      &:first-child
        border-top-left-radius inherit
        border-top-right-radius inherit

      &:last-child
        border-bottom-left-radius inherit
        border-bottom-right-radius inherit

