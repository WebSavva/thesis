@keyframes spin
  from
    transform rotate(0deg)

  to
    transform rotate(360deg)

.panel
  &__blur
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    z-index -1
    background rgba(0, 0, 0, .4)
    opacity 0
    transition .2s ease-out

    ^[0]__sidebar_expanded ~ &
      z-index 99
      opacity 1
      backdrop-filter blur(2px)

  &__sidebar
    background var(--interface-side-color)
    position fixed
    top 0
    left 0
    height 100%
    width var(--sidebar-width)
    box-shadow -5px 0 0 #2f3139 inset
    transition all 0.1s
    z-index 100

    @media $max-sm
      max-height 6rem
      overflow hidden
      width 100%

    &_expanded
      width var(--sidebar-width-expanded)

      @media $max-sm
        width 100%
        max-height 100vh

    &__head
      width 100%
      height var(--header-height)
      cursor pointer
      display flex
      background var(--interface-upper-color)

      @media $max-sm
        justify-content center

      &__text
        display none
        white-space nowrap
        transition flex 0.1s linear
        flex 2
        align-self center
        font-size 1.8rem
        color var(--header-menu-color)
        margin-left 4.5rem
        font-weight 400

        ^[0]__sidebar_expanded &
          display block

          @media $max-sm
            display none

      &__toggler
        width var(--sidebar-width)
        height 100%
        display grid
        place-content center center

        ^[0]__sibebar_expanded &
          flex 1
          border-bottom-left-radius 0.8rem

        &__icon
          font-size 2.5rem
          color var(--selected-color)
          transition color 0.2s linear

    &__nav
      width 100%
      min-height 3rem
      overflow hidden

      &__menu
        display flex
        gap 1.5rem
        flex-direction column
        list-style none
        padding-left 0

        &__item
          width 100%
          padding 2rem
          transition all 0.1s linear
          cursor pointer
          display grid
          white-space nowrap

          @media $max-sm
            display flex
            padding-left 3rem

          ^[0]__sidebar_expanded &
            grid-template-columns 1fr 3fr
            grid-gap 0.2rem


          &:hover
            background var(--selected-background)
            transform translateX(0.2rem)

          &__icon
            color var(--icon-color)
            font-size 2.5rem
            justify-self center

            @media $max-sm
              margin-right 1.5rem

          &__text
            display none

            ^[0]__sidebar_expanded &
              display block
              flex 2
              align-self center
              font-size 1.8rem
              color var(--header-menu-color)
              margin-left 1.5rem
              font-weight 400

          &_selected
            border-left 0.5rem solid var(--selected-color)
            background var(--selected-background)

            ^[-1]__icon
              color var(--selected-color)

  &__main
    width 100%
    padding-left var(--sidebar-width)

    @media $max-sm
      padding-left 0
      padding-top 6rem

    &__head
      background var(--white-color)
      color var(--interface-side-color)
      height var(--header-height)
      display flex
      justify-content space-between
      align-items center
      box-shadow var(--dark-subtle-shadow)

      @media $max-sm
        display none

      &__text
        font-size 2rem
        margin-left 4rem
        font-weight 300
        letter-spacing 0.3rem

        @media $max-md
          font-size 1.75rem
          letter-spacing .1rem

      &__icon
        margin-right 3rem
        font-size 3.5rem
        color var(--selected-color)
        animation spin 15s infinite linear
        transition all 0.3s linear

        @media $max-md
          font-size 2.5rem

        &:hover
          animation spin 5s infinite linear 2s
          color rgba(240, 23, 23, 0.836)

    &__content
      padding 2rem


